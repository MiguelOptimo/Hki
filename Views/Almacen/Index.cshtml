                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <table class="table">
                  <thead>
                  <tr>
                    <th>Product Code</th>
                    <th>Asignado</th>
                    <th>Levantamiento</th>
                    <th>Cantidad</th>
                    <th>Descripcion</th>
                    <th>Dia</th>
                    <th>Ubicacion</th>
                    <th>Estatus2</th>
                    <th>Estatus3</th>
                    <th>Fecha Requerimiento</th>
                    <th>Finalizadas</th>
                  </tr>
                  </thead>
                  <tbody>
                  @foreach (var item in Model.Ordenes)
                  {
                    <tr>
                      <td>@item.ProductoId</td>
                      <td>@item.Asignado</td>
                      <td>@item.Levantamiento</td>
                      <td>@item.Cantidad</td>
                      <td>@item.Descripcion</td>
                      <td>@item.Dia</td>
                      <th>@item.Ubicacion</th>
                      <td>@item.Estatus2</td>
                      <td>@item.Estatus3</td>
                      <td>@item.FechaReq</td>
                      <td>@item.Finalizadas</td>
                    </tr>
                  }
                  </tbody>
                </table>

              </div>
            </div>
